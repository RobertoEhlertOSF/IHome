             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="IHome.Views.Sobre">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Sobre este Trabalho de Conclusão de Curso:"
                   FontSize="Medium"
                   FontAttributes="Bold"
